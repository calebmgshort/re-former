<%= form_tag('/users') do -%>

  <%= label_tag 'email' %>
  <%= email_field_tag 'email' %>
  <br><br>
  <%= label_tag 'username' %>
  <%= text_field_tag 'username' %>
  <br><br>
  <%= label_tag 'password' %>
  <%= password_field_tag 'password' %>
  <br><br>
  <%= submit_tag 'Submit' %>

<% end -%>


<%# Commenting this raw erb code %>
<% if false %>
<form action="/users" method="post" accept-charset="UTF-8">

  <input type="hidden" name="authenticity_token" value="<% form_authenticity_token %>">

  <label for="email">Email:</label>
  <input type="email" id="email" name="user[email]" value="<%= @user.email %>"><br><br>

  <label for="username">Username:</label>
  <input type="text" id="username" name="user[username]" value="<%= @user.username %>"><br><br>

  <label for="password">Password:</label>
  <input type="password" id="password" name="user[password]" value="<%= @user.password %>"><br><br>

  <input type="submit" value="Submit">

</form>
<% end %>

