<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %><br>
  <% end %>%
<% end %>

<%= form_for @user do |form| %>
  email: <%= form.email_field :email %><br><br>
  username: <%= form.text_field :username %><br><br>
  password: <%= form.password_field :password %><br><br>
  <%= form.submit %>
<% end %>